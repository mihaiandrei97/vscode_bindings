{
  "editor.fontFamily": "'Zed Plex Mono', 'Jetbrains Mono', 'Dank Mono', 'Monaspace Neon', Cascadia Code, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.lineHeight": 2,
  "editor.fontSize": 15,
  "editor.minimap.enabled": false,
  "editor.lineNumbers": "relative",
  "editor.suggest.insertMode": "replace",
  "editor.linkedEditing": true,
  "editor.cursorSurroundingLines": 10,
  "workbench.sideBar.location": "right",
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.activityBar.location": "top",
  "explorer.compactFolders": false,
  "breadcrumbs.enabled": false,
  "github.copilot.editor.enableAutoCompletions": true,
  "window.commandCenter": false,
  "svelte.enable-ts-plugin": true,
  "vim.easymotion": true,
  "vim.useSystemClipboard": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.duration": 250,
  "vim.hlsearch": true,
  "vim.useCtrlKeys": true,
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                "p",
            ],
            "after": [
                "p",
                "g",
                "v",
                "y"
            ]
        }
    ],
  "vim.normalModeKeyBindingsNonRecursive": [
    // NAVIGATION
    {
      "before": ["<C-u>"],
      "after": ["2", "0", "k", "z", "z"]
    },
    {
      "before": ["<C-d>"],
      "after": ["2", "0", "j", "z", "z"]
    },
    // switch b/w buffers
    { "before": ["<S-h>"], "commands": [":bprevious"] },
    { "before": ["<S-l>"], "commands": [":bnext"] },
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    },
    {
      "before": ["K"],
      "commands": ["lineBreakInsert"],
      "silent": true
    },
    // splits
    { "before": ["leader", "v"], "commands": [":vsplit"] },
    { "before": ["leader", "s"], "commands": [":split"] },
    { "before": ["leader", "e"], "commands": ["workbench.explorer.fileView.focus"]},
     // panes
     {
      "before": ["leader", "h"],
      "commands": ["workbench.action.focusLeftGroup"]
    },
    {
      "before": ["leader", "j"],
      "commands": ["workbench.action.focusBelowGroup"]
    },
    {
      "before": ["leader", "k"],
      "commands": ["workbench.action.focusAboveGroup"]
    },
    {
      "before": ["leader", "l"],
      "commands": ["workbench.action.focusRightGroup"]
    },
    // Nice have
    {
      "before": ["<leader>", "c", "a"],
      "commands": ["editor.action.quickFix"]
    },
     {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.next"]
    },
  ],
  "vim.visualModeKeyBindings": [
    // Stay in visual mode while indenting
    { "before": ["<"], "commands": ["editor.action.outdentLines"] },
    { "before": [">"], "commands": ["editor.action.indentLines"] },
    // Move selected lines while staying in visual mode
    { "before": ["J"], "commands": ["editor.action.moveLinesDownAction"] },
    { "before": ["K"], "commands": ["editor.action.moveLinesUpAction"] },
    // toggle comment selection
    { "before": ["leader", "c"], "commands": ["editor.action.commentLine"] }
  ],
  // "workbench.colorCustomizations": {
  //   "[Night Owl]": {
  //     "statusBar.foreground": "#ccc",
  //     "panel.background": "#002",
  //     "sideBar.background": "#001",
  //     "editor.background": "#001",
  //     "peekViewEditor.background": "#000",
  //     "editorGutter.background": "#000"
  //   }
  // }
}
